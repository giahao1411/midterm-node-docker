<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form
        class="mt-4"
        method="post"
        action="/course/edit/<%= selectedCourse._id %>?_method=PATCH"
    >
        <div class="form-group">
            <label for="description">Tên khóa học</label>
            <input
                type="text"
                class="form-control"
                value="<%= selectedCourse.name %>"
                id="name"
                name="name"
                required
            />
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea
                class="form-control"
                id="description"
                name="description"
                required
            >
<%= selectedCourse.description %></textarea
            >
        </div>
        <div class="form-group">
            <label for="description">Video ID</label>
            <input
                type="text"
                class="form-control"
                value="<%= selectedCourse.videoId %>"
                id="videoId"
                name="videoId"
                required
            />
        </div>
        <div class="form-group">
            <label for="description">Trình độ</label>
            <input
                type="text"
                class="form-control"
                value="<%= selectedCourse.level %>"
                id="level"
                name="level"
                required
            />
        </div>

        <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
    </form>
</div>
