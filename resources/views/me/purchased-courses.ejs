<link rel="stylesheet" href="/css/mycourse.css" />

<div class="container mt-4">
    <h2 class="mb-5">Khoá học của tôi</h2>
    <div id="courses" class="row">
        <% courses.forEach(course => { %>
        <div class="card-container col-12 mb-4">
            <a href="/course/show/<%= course._id %>">
                <div class="card d-flex flex-row align-items-center">
                    <a href="/course/show/<%= course._id %>">
                        <img
                            src="<%= course.image %>"
                            class="card-img-left"
                            alt="<%= course.name %>"
                        />
                    </a>
                    <div
                        class="card-body d-flex flex-column justify-content-between"
                    >
                        <a href="/course/show/<%= course._id %>">
                            <h3 class="course-name"><%= course.name %></h3>
                        </a>
                        <h5 class="coruse-level mb-5"><%= course.level %></h5>

                        <p class="course-description">
                            <%= course.description %>
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% }); %>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const courses = document.getElementsByClassName("card-container");

        if (courses) {
            for (let course of courses) {
                course.addEventListener("click", () => {
                    window.location.href = course.querySelector("a").href;
                });
            }
        }
    });
</script>
