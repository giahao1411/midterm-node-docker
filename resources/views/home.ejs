<div class="container mt-4">
    <!-- Div hiển thị kết quả tìm kiếm -->
    <div id="searchResults"></div>

    <!-- Nội dung khác của trang home -->
    <div id="mainContent">
        <div class="mt-4">
            <div class="row">
                <% courses.forEach(course=> { %>
                <div class="card-container col-sm-6 col-lg-4">
                    <div class="card card-course-item">
                        <a href="/course/show/<%= course._id %>">
                            <img
                                class="card-img-top"
                                src="<%= course.image %>"
                                alt="<%= course.name %>"
                            />
                        </a>
                        <div class="card-body">
                            <a href="/course/show/<%= course._id %>">
                                <h5 class="card-title"><%= course.name %></h5>
                            </a>
                            <p class="card-text"><%= course.description %></p>
                            <div class="row course-btn">
                                <form
                                    method="post"
                                    action="/me/cart/<%= course._id %>"
                                >
                                    <button
                                        class="btn btn-primary"
                                        type="submit"
                                    >
                                        Thêm vào giỏ hàng
                                    </button>
                                </form>
                                <form
                                    method="post"
                                    action="/me/cart/<%= course._id %>"
                                >
                                    <button
                                        class="btn btn-success"
                                        type="submit"
                                    >
                                        Mua khóa học
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
